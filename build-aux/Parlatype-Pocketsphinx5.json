{
    "app-id" : "xyz.parlatype.Parlatype",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "48",
    "sdk" : "org.gnome.Sdk",
    "command" : "parlatype",
    "finish-args" : [
        "--device=dri",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--socket=pulseaudio",
        "--filesystem=home:ro"
    ],
    "cleanup" : [
        "*.la",
        "*.a",
        "/include",
        "/lib/pkgconfig",
        "/libexec",
        "/share/man"
    ],
    "modules" : [
        {
            "name" : "pocketsphinx",
            "buildsystem" : "cmake",
            "config-opts" : [
                "-DBUILD_SHARED_LIBS=yes"
            ],
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://github.com/cmusphinx/pocketsphinx/archive/refs/tags/v5.0.4.tar.gz",
                    "sha256" : "9acd63cfdc76bbc85b7b6c6610b7a9cf30c79d5b36a31de7dc2f969e962653d7"
                }
            ],
            "cleanup" : [
                "/bin/pocketsphinx_*",
                "/lib/debug/bin/pocketsphinx_*"
            ]
        },
        {
            "name" : "parlatype",
            "buildsystem" : "meson",
            "config-opts" : [
                "-Dpocketsphinx=true"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "branch" : "main",
                    "path" : "../"
                },
                {
                    "type" : "file",
                    "path" : "data/asr/en.sphinx.pocketsphinx5.asr"
                }
            ]
        }
    ]
}
